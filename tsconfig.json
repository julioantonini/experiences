{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@database/database": [
        "libs/database/src"
      ],
      "@database/database/*": [
        "libs/database/src/*"
      ],
      "@validators/validators": [
        "libs/validators/src"
      ],
      "@validators/validators/*": [
        "libs/validators/src/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ]  
}