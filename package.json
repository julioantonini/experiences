{
  "name": "experiences",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "env nest start",
    "start:dev": "env NODE_OPTIONS=--openssl-legacy-provider TZ='Etc/UTC' nest start --watch",
    "start:debug": "env nest start --debug --watch",
    "start:prod": "node dist/apps/experiences/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/experiences/test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "typeorm:cli": "yarn run typeorm -f ./libs/database/src/config/typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "9.2.1",
    "@nestjs/platform-express": "^9.4.2",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "8.0.4",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.0",
    "cpf-check": "^3.0.0",
    "dotenv": "^8.2.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "7.8.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@nestjs/schematics": "^7.3.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "@database/database/(.*)": "<rootDir>/libs/database/src/$1",
      "@database/database": "<rootDir>/libs/database/src",
      "@validators/validators/(.*)": "<rootDir>/libs/validators/src/$1",
      "@validators/validators": "<rootDir>/libs/validators/src"
    }
  }
}
